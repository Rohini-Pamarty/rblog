<%= form_for([@post,@post.comments.build]) do |f| %>
<div>
    <%= f.label :Name %><br /><br />
    <%= f.text_field :commentor %><br />
  </div><br />
  <div >
    <%= f.label :comment %><br /><br />
    <%= f.text_area :comment, :rows=>10 %><br />
  </div>
  <div ><br />
    <%= f.submit "Submit Comment" %>
  </div>
<% end %>
